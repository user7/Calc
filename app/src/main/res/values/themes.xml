<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="materialButtonStyle">@style/CalcButton</item>
        <item name="android:textViewStyle">@style/CalcDisplay</item>
    </style>

    <style name="ThemeCalcPink">
        <item name="materialButtonStyle">@style/CalcButton.Pink</item>
        <item name="android:textViewStyle">@style/CalcDisplay.Pink</item>
    </style>

</resources>